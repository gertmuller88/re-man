<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.2"
			   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			   xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.2 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.2.xsd">

	<!-- REWRITES - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	<rewrite match="^/(.*)/$" substitute="/$1" redirect="301" />
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->


	<!-- MAPPINGS - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	<url-mapping id="home"> 
		<pattern value="/home"/> 
		<view-id value="/faces/home.jsf"/>
	</url-mapping> 

	<url-mapping id="login"> 
		<pattern value="/login"/> 
		<view-id value="/faces/login.jsf"/>
	</url-mapping> 
	
	<url-mapping id="index">
		<pattern value="/"/>
		<view-id value="/faces/index.jsf"/>
	</url-mapping>
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

</pretty-config>
