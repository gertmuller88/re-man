<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

	<persistence-unit name="reman">
		<!-- JPA Provider -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Entities -->
		<class>br.gumn.bean.Address</class>
		<class>br.gumn.bean.Association</class>
		<class>br.gumn.bean.Department</class>
		<class>br.gumn.bean.Institution</class>
		<class>br.gumn.bean.Link</class>
		<class>br.gumn.bean.Project</class>
		<class>br.gumn.bean.Publication</class>
		<class>br.gumn.bean.Researcher</class>
		<class>br.gumn.bean.ResearchLine</class>
		<class>br.gumn.bean.Team</class>
		<class>br.gumn.bean.Title</class>
		<class>br.gumn.bean.University</class>
		<class>br.gumn.bean.User</class>

		<!-- Database Connection Properties -->
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/reman"/>
			<property name="hibernate.connection.username" value="root"/>
			<property name="hibernate.connection.password" value="root"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.archive.autodetection" value="class, hbm"/>
			<property name="hibernate.connection.pool_size" value="10"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.c3p0.min_size" value="5"/>
			<property name="hibernate.c3p0.max_size" value="20"/>
			<property name="hibernate.c3p0.timeout" value="300"/>
			<property name="hibernate.c3p0.max_statements" value="50"/>
			<property name="hibernate.c3p0.idle_test_period" value="3000"/>
		</properties>
	</persistence-unit>
</persistence>